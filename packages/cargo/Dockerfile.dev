# Development Dockerfile for Next.js with hot reload
FROM node:20-alpine

WORKDIR /app

# Add libc6-compat for lightningcss/swc support
RUN apk add --no-cache libc6-compat

# Copy package files
COPY package*.json ./

# Configure npm for better network handling
RUN npm config set fetch-timeout 300000 && \
    npm config set fetch-retries 5 && \
    npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000 && \
    npm config set registry https://registry.npmjs.org/

# Install dependencies with clean install
RUN npm install --legacy-peer-deps

# Expose port (internal port 3002)
EXPOSE 3002

# Environment variables for Next.js
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
# Skip SWC lockfile patching at runtime (already installed)
ENV NEXT_IGNORE_INCORRECT_LOCKFILE=true

# Run Next.js in development mode with hot reload
CMD ["npm", "run", "dev"]
