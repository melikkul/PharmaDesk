{
  "ConnectionStrings": {
    "DefaultConnection": "[SECRET_FROM_ENV]"
  },
  "Crypto": {
    "ShipmentKey": "PharmaDesk-Shipment-AES256-Key-2024"
  },
  "Jwt": {
    "Key": "[SECRET_FROM_ENV]"
  },
  "AdminSeeding": {
    "Email": "melik_kul@outlook.com",
    "FirstName": "Melik",
    "LastName": "Kul"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/pharmadesk-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllianceHealthcare": {
    "BaseUrl": "https://esiparisv2.alliance-healthcare.com.tr",
    "PharmacyCode": "[SECRET_FROM_ENV]",
    "Username": "[SECRET_FROM_ENV]",
    "Password": "[SECRET_FROM_ENV]",
    "SessionTimeoutMinutes": 25
  },
  "AllowedHosts": "*"
}
