FROM mcr.microsoft.com/dotnet/sdk:9.0

WORKDIR /app

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Note: Python/Playwright dependencies moved to scrapper-service container
# This Dockerfile is now simplified to only include .NET SDK

# Expose port
EXPOSE 8081

# Environment variables
ENV ASPNETCORE_URLS=http://+:8081
ENV ASPNETCORE_ENVIRONMENT=Development

# Run with dotnet watch for hot reload
ENTRYPOINT ["dotnet", "watch", "run", "--project", "src/PharmaDesk.API/PharmaDesk.API.csproj", "--urls", "http://+:8081"]
